---
import Footer from './Footer.astro';
import Header from './Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const pageTitle = title ? `| ${title}` : '';
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/fonts/fontawesome/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>
      Real Experts {pageTitle}
    </title>
  </head>
  <body class="caret-transparent">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* changa-regular - latin */
  @font-face {
    font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
    font-family: 'Changa';
    font-style: normal;
    font-weight: 400;
    src: url('../fonts/changa/changa-v20-latin-regular.woff2') format('woff2'),
      /* Chrome 36+, Opera 23+, Firefox 39+ */
        url('../fonts/changa/changa-v20-latin-regular.woff') format('woff'); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
  }
  /* changa-600 - latin */
  @font-face {
    font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
