  "license": "ISC",
  "private": true,
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-check-updates": "16.14.11"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "postinstall": "npm rebuild argon2 sharp isolated-vm",
    "dev": "concurrently --kill-others \"bun dev:backend\" \"bun dev:frontend\"",
    "dev:backend": "bun --cwd packages/backend dev",
    "dev:frontend": "bun --cwd packages/frontend dev",
    "lint": "bun --cwd packages/frontend lint",
    "lint:fix": "bun --cwd packages/frontend lint:fix",
    "check-types": "bun --cwd packages/frontend check-types",
    "export:models": "bun --cwd packages/backend directus models snapshot ../frontend/src/lib/types.ts"
  },
  "workspaces": [
    "packages/*"
  ]
}
