---
import Container from '../components/Container.astro';
import FooterMenu from '../components/FooterMenu.astro';
import Heading from '../components/Heading.astro';
import Section from '../components/Section.astro';
import footerData from '../data/footer.json';
import genralData from '../data/general.json';
---

<footer>
  <Section
    color='#0F3F93'
    section_styles={['full_width']}
    marginBottom={'mb-0'}
  >
    <Container centered={false}>
      <div class='justify-between lg:flex'>
        <div>
          <div class='mb-12 h-[177px]'>
            <img
              src='/images/logo/logo_footer.png'
              alt='Logo Real Experts Network GmbH'
            />
          </div>
          <p class='mb-2'>{genralData.company.addressLine}</p>
          <p class='mb-2'>
            <a href={`mailto:${genralData.company.mail}`}
              >{genralData.company.mail}</a
            >
          </p>
          <p class='mb-2 font-bold'>
            <a href={`tel:${genralData.company.phone}`}
              >{genralData.company.phone}</a
            >
          </p>
          <p class='mb-2'>
            <a href={genralData.company.webLink}>{genralData.company.web}</a>
          </p>
        </div>
        <div>
          <div class='mb-12 flex h-[177px] items-center'>
            <Heading>Gemeinsam entfalten wir Ihr volles Potential.</Heading>
          </div>
          <div class='justify-between lg:flex'>
            <FooterMenu menu={footerData.menus[0]} />
            <FooterMenu menu={footerData.menus[1]} />
            <FooterMenu menu={footerData.menus[2]} />
          </div>
        </div>
      </div>
    </Container>
  </Section>
</footer>
<button
  onclick="window.scrollTo({ top: 0, behavior: 'smooth' });"
  type='button'
  class='site-scroll-top-button group fixed bottom-6 right-6 z-50 h-12 w-12 overflow-hidden rounded-full border-2 border-white bg-re-blue text-white'
>
  <div class='transition-all duration-200 group-hover:-mt-12'>
    <i class='fa-solid fa-long-arrow-up mb-5 mt-4 block'></i>
    <i class='fa-solid fa-long-arrow-up -mt-1 block'></i>
  </div>
</button>
