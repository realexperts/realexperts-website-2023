      url('../fonts/poppins/poppins-v20-latin-500.woff2') format('woff2'),
      /* Chrome 36+, Opera 23+, Firefox 39+ */
        url('../fonts/poppins/poppins-v20-latin-500.woff') format('woff'); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
