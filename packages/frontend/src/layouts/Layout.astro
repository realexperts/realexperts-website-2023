    font-family: 'Poppins';
    font-style: normal;
    font-weight: 700;
    src:
      url('../fonts/poppins/poppins-v20-latin-700.woff2') format('woff2'),
      /* Chrome 36+, Opera 23+, Firefox 39+ */
        url('../fonts/poppins/poppins-v20-latin-700.woff') format('woff'); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
  }

  html,
  body {
    font-size: 18px;
  }

  #site-header {
    @apply py-[30px] transition-all duration-500 ease-in-out;
  }

  .scrolled-down #site-header {
    @apply py-3 shadow;
  }

  #site-logo {
    @apply h-16 transition-all duration-500 ease-in-out lg:h-[89px];
  }

  .scrolled-down #site-logo {
    @apply h-16;
  }

  .site-scroll-top-button {
    clip-path: circle(0% at 50% 50%);
    opacity: 0;
    transition: all 0.5s ease-out;
  }

  .scrolled-down .site-scroll-top-button {
    opacity: 100;
    clip-path: circle(50% at 50% 50%);
  }
</style>
<script>
  // add classes to body if scrolled
  window.addEventListener('scroll', () => {
    if (window.scrollY > 0) {
      document.body.classList.add('scrolled-down');
    } else {
      document.body.classList.remove('scrolled-down');
    }
  });
</script>
