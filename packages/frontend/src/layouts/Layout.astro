---
import {
  fetchMetaInformation,
  fetchPages,
  fetchSettings
} from '@/lib/directus';
import type { ArrayElement } from '@/lib/typescript';
import { getImage } from 'astro:assets';
import Footer from './Footer.astro';
import Header from './Header.astro';

export interface Props {
  page?: ArrayElement<Awaited<ReturnType<typeof fetchPages>>>;
}

const { page } = Astro.props;

const metaInformation = await fetchMetaInformation(page?.id);
const settings = await fetchSettings();

const pageTitle = page?.title ? `| ${page?.title}` : '';

const metaTitle = metaInformation?.meta_title || page?.title;
const metaDescription = metaInformation?.meta_description;

const optimizedMetaImage = metaInformation?.meta_image
  ? await getImage({
      src: `${import.meta.env.DIRECTUS_URL}/assets/${
        metaInformation?.meta_image.id
      }`,
      format: 'jpg',
      width: metaInformation?.meta_image.width,
      height: metaInformation?.meta_image.height,
      quality: 80
    })
  : undefined;

// Create favicon from source
const favicon = settings?.favicon
  ? await getImage({
      src: `${import.meta.env.DIRECTUS_URL}/assets/${settings?.favicon.id}`,
      format: 'png',
      width: settings?.favicon.width,
      height: settings?.favicon.height
    })
  : undefined;
---

<!doctype html>
<html lang='de' class='scroll-smooth focus:scroll-auto'>
  <head>
    <meta charset='utf8' />
    <meta name='viewport' content='width=device-width' />
    {favicon && <link rel='icon' type='image/svg+xml' href={favicon.src} />}
    {!settings?.robots_index && <meta name='robots' content='noindex' />}
    <link
      rel='stylesheet'
      type='text/css'
      href='/fonts/fontawesome/css/all.min.css'
    />
    <title>
      Real Experts {pageTitle}
    </title>

    {metaTitle && <meta name='title' content={metaTitle} />}
    {metaDescription && <meta name='description' content={metaDescription} />}
    {metaTitle && <meta property='og:title' content={metaTitle} />}
    {
      metaDescription && (
        <meta property='og:description' content={metaDescription} />
      )
    }
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://realexperts.de/' />
    {
      optimizedMetaImage && (
        <meta
          property='og:image'
          content={`https://realexperts.de${optimizedMetaImage.src}`}
        />
      )
    }
  </head>
  <body class='caret-transparent'>
    <Header />
    <main class="pt-[149px]">
      <slot />
    </main>
    <Footer />
  </body>
</html>

