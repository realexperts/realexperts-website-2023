---
const { menu } = Astro.props;
---

<div>
  <h1 class='mb-2 font-bold'>{menu ? menu.headline : ''}</h1>
  <ul>
    {
      menu?.items?.map((menuItem: any) => {
        return (
          <li class='mb-2'>
            <a href={menuItem.link}>{menuItem.text}</a>
          </li>
        );
      })
    }
  </ul>
</div>
