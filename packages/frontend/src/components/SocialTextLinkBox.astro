---
const { faIcon, linkText, linkHref, linkTarget } = Astro.props;
---

<div
  class='flex items-center gap-12 bg-re-turquoise px-24 py-12 font-serif text-xl text-white'
>
  <div class='flex w-[26%] justify-end'>
    <i class={`fa-solid fa-${faIcon} text-[150px]`}></i>
  </div>
  <div class='mt-6'>
    <slot />
    <a
      class='mt-5 inline-block text-re-blue underline'
      href={linkHref}
      target={linkTarget}>{linkText}</a
    >
  </div>
</div>
