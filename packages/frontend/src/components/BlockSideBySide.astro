---
type Props = { order?: 'left_column_first' | 'right_column_first' | null };

const { order } = Astro.props;
---

<div
  class:list={[
    'relative mx-auto mb-12 grid max-w-4xl grid-cols-1 gap-32 lg:grid-cols-2'
  ]}
>
  <div
    class:list={[order === 'right_column_first' && 'order-last lg:order-first']}
  >
    <slot name='left' />
  </div>
  <div>
    <slot name='right' />
  </div>
</div>
