---
import ReactBlockForm from '@/components/react/BlockForm';
import { marked } from 'marked';

type Props = {
  formId: number;
  text: string | null;
};

const { formId, text } = Astro.props;
---

<div class='mx-auto my-6 grid max-w-4xl md:grid-cols-3'>
  <div
    class='prose mb-8 !text-white prose-headings:text-white prose-h3:my-0 prose-h4:my-0 prose-h4:font-sans prose-h4:font-normal'
    set:html={marked(text ?? '')}
  />

  <div class='col-span-2 md:pl-12'>
    <ReactBlockForm formId={formId} client:load>
      <div set:html={marked(text ?? '')} />
    </ReactBlockForm>
  </div>
</div>
