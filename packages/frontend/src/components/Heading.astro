---
type Props = {
  alignment?: 'left' | 'center' | 'right';
};

const { alignment = 'center' } = Astro.props;

const alignments = {
  left: 'text-left',
  center: 'text-center mx-auto',
  right: 'text-right'
};
---

<h2
  class:list={['mb-8 font-serif text-3xl lg:text-4xl font-semibold hyphens-auto lg:hyphens-none', alignments[alignment]]}
>
  <slot />
</h2>
