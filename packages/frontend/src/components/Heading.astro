---
type Props = {
  alignment?: 'left' | 'center' | 'right';
};

const { alignment = 'center' } = Astro.props;

const alignments = {
  left: 'text-left',
  center: 'text-center mx-auto',
  right: 'text-right'
};
---

<h2
  class:list={[
    'mb-8 hyphens-auto font-serif text-3xl font-semibold lg:hyphens-none lg:text-4xl',
    alignments[alignment]
  ]}
>
  <slot />
</h2>
