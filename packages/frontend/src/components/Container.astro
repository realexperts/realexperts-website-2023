---
import type { BackgroundColors } from '../types/backgrounds-colors.type';

export interface Properties {
  centered?: boolean;
  background?: BackgroundColors;
  standardPadding?: boolean;
  rounded?: boolean;
}

const {
  centered = true,
  standardPadding = false,
  background = 'transparent',
  rounded = false
} = Astro.props;

const colorSchema = {
  blue: 'bg-primary text-white',
  gray: 'bg-neutral text-black',
  transparent: 'bg-transparent text-inherit text-current',
  turquoise: 'bg-secondary-light text-primary',
  white: 'bg-white text-black'
};
---

<div
  class:list={[
    'mx-auto w-full max-w-website px-8 xl:px-0',
    colorSchema[background as keyof typeof colorSchema],
    { 'text-center': centered },
    { 'px-24': standardPadding },
    { 'rounded-bl-[70px] pb-12 pt-14': rounded }
  ]}
>
  <slot />
</div>
