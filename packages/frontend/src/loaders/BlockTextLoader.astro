---
import BlockText from '@/components/BlockText.astro';
import { client } from '@/lib/directus';
import { readItem } from '@directus/sdk';

type Props = {
  itemId: number;
};

const { itemId } = Astro.props;

export const loadBlockText = async (itemId: number) => {
  return await client.request(
    readItem('block_text', itemId, {
      fields: [
        'alignment',
        'color_headline',
        'color_text',
        'max_width_container',
        'text'
      ]
    })
  );
};

const response = await loadBlockText(itemId);

const properties = {
  alignment: response.alignment,
  colorHeadline: response.color_headline,
  colorText: response.color_text,
  maxWidthContainer: response.max_width_container,
  text: response.text
};
---

<BlockText {...properties} />
